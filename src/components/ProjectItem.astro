---
import Badge from "./Badge.astro";
const { data } = Astro.props;
---

{
  data.map((technologie) => (
    <a
      href={technologie.href}
      target="_blank"
      rel="noopener noreferrer"
      class="bg-white/30 dark:bg-[#262626]/30 border border-gray-300 dark:border-[#333] rounded-2xl pt-4 pb-5 px-4 group transition-all overflow-hidden group"
    >
      <div class="overflow-hidden rounded-lg h-[250px] sm:h-60 lg:h-40 w-full cursor-pointer border border-gray-200 dark:border-0">
        <div
          style={`background-image: url(${technologie.image.src});`}
          class="w-full h-full bg-cover bg-no-repeat transition-all duration-[6000ms] ease-out group-hover:bg-[0_100%] delay-150"
        />
      </div>
      <div class="mt-3">
        <h3 class="font-semibold mb-1.5 text-xl">{technologie.title}</h3>
        <p class="text-tinny text-[#666666] dark:text-[#888888] mb-4 lg:line-clamp-2 group-hover:line-clamp-none transition-all">
          {technologie.description}
        </p>
        <div class="flex items-center gap-1.5 flex-wrap">
          {technologie.technologies.map((technologie) => (
            <Badge title={technologie.name}>
              <technologie.icon class="size-3.5" />
            </Badge>
          ))}
        </div>
      </div>
    </a>
  ))
}
